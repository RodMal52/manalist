<h1>Cards <small>Admin</small></h1>
<p><%= link_to "Back to Admin", admin_root_path %></p>

<div class="text-center">
  
 
</div>

<%= form_tag cards_path, method: 'get', html: {role: "form"} do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil, class: "btn btn-sm btn-primary" %>
    <%= link_to "All", cards_path, {class: "btn btn-sm btn-link"} %>
  </p>
<% end %>

<table class="table table-striped">
  <tr>
     <th>Cardname</th>
      <th>Manacost</th>
      <th>Color</th>
      <th>Power</th>
      <th>Toughness</th>
      <th>Loyalty counter</th>
      <th>Card type</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.cardname %></td>
        <td><%= card.manacost %></td>
        <td><%= card.color %></td>
        <td><%= card.power %></td>
        <td><%= card.toughness %></td>
        <td><%= card.loyalty_counter %></td>
        <td><%= card.card_type %></td>
        <td><%= card.description %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  
  <% end %>
  
</table>

