<h1>Listing decks</h1>

<table>
  <thead>
    <tr>
      <th>Deck</th>
      <th>Username</th>
      <th>Name</th>
      <th>Format</th>
      <th>Type</th>
      <th>Colors</th>
      <th>Rating</th>
      <th>Creation date</th>
      <th>Last update</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @decks.each do |deck| %>
      <tr>
        <td><%= deck.deck_id %></td>
        <td><%= deck.username %></td>
        <td><%= deck.name %></td>
        <td><%= deck.format %></td>
        <td><%= deck.type %></td>
        <td><%= deck.colors %></td>
        <td><%= deck.rating %></td>
        <td><%= deck.creation_date %></td>
        <td><%= deck.last_update %></td>
        <td><%= link_to 'Show', deck %></td>
        <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
        <td><%= link_to 'Destroy', deck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

